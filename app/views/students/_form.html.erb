<%= simple_form_for(student) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'Primer nombre' %>
    <%= f.input :middle_name, label: 'Segundo nombre' %>
    <%= f.input :first_surname, label: 'Primer apellido' %>
    <%= f.input :second_surname, label: 'Segundo apellido' %>
    <%= f.input :university_code, label: 'Código universitario' %>
    <%= f.input :university_username, label: 'Usuario universitario' %>
    <%= f.input :mobile_phone, label: 'Número telefónico' %>

    <strong>Pregrados</strong>
    <br>
    <%= f.simple_fields_for :student_has_undergraduates do |student_has_undergraduate| %>
      <%= render 'student_has_undergraduate_fields', f: student_has_undergraduate %>
    <% end %>
    <%= link_to_add_association 'Agregar pregrado', f, :student_has_undergraduates %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Crear estudiante' %>
  </div>
<% end %>
