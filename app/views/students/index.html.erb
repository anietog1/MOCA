<p id="notice"><%= notice %></p>

<h1>Estudiantes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre completo</th>
      <th>Código</th>
      <th>Usuario</th>
      <th>Número telefónico</th>
      <th>Válido</th>
      <th>Monitor</th>
      <th>Pregrados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.university_code %></td>
        <td><%= student.university_username %></td>
        <td><%= student.mobile_phone %></td>
        <td><%= student.is_valid %></td>
        <td><%= student.is_advisor %></td>
        <td>
          <ul>
            <% student.undergraduates.each do |undergraduate| %>
              <li><%= undergraduate.name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Ver', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Destruir', student, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nuevo estudiante', new_student_path %> | 
<%= link_to 'Volver', root_path, method: :get %>
