<p id="notice"><%= notice %></p>

<h1>Horario</h1>

<div class="schedule-div">
  <table class="schedule">
    <thead>
      <tr>
        <th>Hora</th>
        <% Day.all.each do |day| %>
          <th><%= day.name %></th>
        <% end %>
      </tr>
    </thead>

    <% Hour.all.each do |hour| %>
      <tr>
        <th><%= hour.name %></th>
        <% Day.all.each do |day|%>
          <td><%= 'x' if @sessions.where(day_has_hour: DayHasHour.find_by(day: day, hour: hour)).any? %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<br>

