<p id="notice"><%= notice %></p>

<h1>Monitorías</h1>

<table>
  <thead>
    <tr>
      <th>Periodo</th>
      <th>Día</th>
      <th>Hora</th>
      <th>Materia</th>
      <th>Monitor</th>
      <th>Estudiantes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advices.each do |advice| %>
    <tr>
      <td><%= advice.month.name %></td>
      <td><%= advice.day_has_hour.day.name %></td>
      <td><%= advice.day_has_hour.hour.name %></td>
      <td><%= advice.subject.name unless advice.subject == nil %></td>
      <td><%= advice.advisor.student.university_username %></td>
      <td><% advice.students.each do |student| %>
        <%= student.full_name %><br>
        <% end %>
      </td>
<!-- Is missing      <td><%= link_to 'Ver' %></td>
      <td><%= link_to 'Editar' %></td>
-->    </tr>
    <% end %>
  </tbody>
</table>

