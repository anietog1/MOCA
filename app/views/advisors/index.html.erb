<p id="notice"><%= notice %></p>

<h1><%= t('advisors')%></h1>

<table>
  <thead>
    <tr>
      
      <th><%= t('u_c') %></th>
      <th><%= t('semester') %></th>
      <th><%= t('subjects') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.student.university_code %></td>
        <td><%= advisor.semester.name %></td>
        <td>
          <ul>
            <% advisor.subjects.each do |subject| %>
              <li><%= subject.name %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', advisor %></td>
        <td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
        <td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Validate', advisors_validate_path(advisor) if advisor.is_valid.nil? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Ranking', ranking_advisor_path %>
<%= link_to 'New Advisor', new_advisor_path %> |
