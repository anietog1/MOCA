<%= form_for :advice do |form| %>
<div class="field">
  <%= form.label :Term %>
 <%= form.collection_select :term_id, Term.all, :id, :name, prompt: true %>
 
</div>

<div class="field">
  <%= form.label :Day %>
  <%= form.collection_select :day_id, Day.all, :id, :name, prompt: true %>
</div>

<div class="field">
  <%= form.label :Hour %>
   <%= form.collection_select :hour_id, Hour.all, :id, :name, prompt: true %>
  
</div>

<div class="field">
  <%= form.label :advisor_code %>
 <%= form.collection_select :advisor_id, Advisor.all, :id, :name, prompt: true %>
  
</div>

<div class="field">
  <%= form.label :student_code %>
   <%= form.collection_select :student_id, Student.all, :id, :university_code, prompt: true %>
 
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
