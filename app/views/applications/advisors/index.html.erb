<p id="notice"><%= notice %></p>

<h1>Advisors applications</h1>

<table>
  <thead>
    <tr>
      <th>Student username</th>
      <th>Term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.student.university_username %></td>
        <td><%= advisor.term.name %></td>
        <td><%= link_to 'Validate', applications_advisor_path(advisor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', applications_path %>
