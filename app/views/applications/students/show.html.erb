<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Middle name:</strong>
  <%= @student.middle_name %>
</p>

<p>
  <strong>First surname:</strong>
  <%= @student.first_surname %>
</p>

<p>
  <strong>Second surname:</strong>
  <%= @student.second_surname %>
</p>

<p>
  <strong>University:</strong>
  <%= @student.university_code %>
</p>

<p>
  <strong>University username:</strong>
  <%= @student.university_username %>
</p>

<p>
  <strong>Mobile phone:</strong>
  <%= @student.mobile_phone %>
</p>

<p>
  <strong><%= "Undergraduate".pluralize(@student.undergraduates.size) + ":" %></strong>
  <% @student.undergraduates.each do |undergraduate| %>
    <br><%= undergraduate.name %>
  <% end %>
</p>

<br>

<%= link_to 'Accept', applications_student_accept_url(@student), method: :post %>
<%= link_to 'Reject', applications_student_reject_url(@student), method: :post %>
<%= link_to 'Back', applications_students_path %>
