<h1>Students</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th colspan="3"></th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.university_code %></td>
      <td><%= link_to 'Validate', applications_student_path(student) %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Back', applications_path %>
